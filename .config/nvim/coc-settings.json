{
	"languageserver": {
		"bash": {
			"command": "bash-language-server",
			"args": [
				"start"
			],
			"filetypes": [
				"sh"
			]
		},
		"clangd": {
			"command": "clangd",
			"rootPatterns": [
				"compile_flags.txt",
				"compile_commands.json"
			],
			"filetypes": [
				"c",
				"cc",
				"cpp",
				"c++",
				"objc",
				"objcpp"
			]
		},
		"dockerfile": {
			"command": "docker-langserver",
			"filetypes": [
				"dockerfile"
			],
			"args": [
				"--stdio"
			]
		},
		"lua": {
			"command": "lua-lsp",
			"filetypes": [
				"lua"
			]
		},
		"sql": {
			"module": "/path/to/node_modules/sql-language-server/dist/bin/cli.js",
			"args": [
				"up",
				"--method",
				"node-ipc"
			],
			"filetypes": [
				"sql",
				"mysql"
			]
		}
	}
}
